<?xml version="1.0" encoding="utf-8"?>
<com.rober.imagedrag.MyConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.rober.imagedrag.MakeImageView
        android:id="@+id/iv_gesture"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintBottom_toTopOf="@+id/v_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/v_test"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="600dp"
        app:layout_constraintTop_toTopOf="parent" />

</com.rober.imagedrag.MyConstraintLayout>